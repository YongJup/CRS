<p id="notice"><%= notice %></p>

<h1>Rent Posts</h1>
<div class="container">
	<div class="row">
	  <div class="search">
      
      <%= form_tag rent_posts_path, method: :get do %>
        <%= text_field_tag :content, params[:content], :class => "form-control input-sm", style: "maxlength=64px;" %>
        <button type="submit" class="btn btn-primary btn-sm" style="position:absolute; height: 30px; right: 0;top: 5px; border-radius:1px;">Search</button>
      <% end %> 
    </div>
  </div>
</div>

<br>
<div class="container", align="right">
  <%= link_to 'New Rent Post', new_rent_post_path, :class => "btn btn-default" %>
	<div class="row">
		<div class="table-responsive">
      <table id="main-table" class="table exotic-table">
        <thead>
          <tr class = "text-center">
            <th>User</th>
            <th>Lens name</th>
            <th>Lens img</th>
            <th>Location</th>
            <th>Price</th>
            <th>Rented</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody class="text-center">
          <% @rent_posts.each do |rent_post| %>
            <tr>
              <td><%= link_to rent_post.user.email, rent_post.user %></td>
              <td><%= rent_post.lens_name %></td>
              
              <td><img src="<%=rent_post.image %>", width = 300, height = 200></td>
              <!--<td><%= image_tag("#{rent_post.image}") %></td>-->
              <td><%= rent_post.location %></td>
              <td><%= rent_post.price %></td>
              <% if rent_post.rented == true %>
                <td><span class="glyphicon glyphicon-ok green"></td>
              <% else %>
                <td><span class="glyphicon glyphicon-remove red"></td>
              <% end %>
              <td><%= link_to '', rent_post, :class => "glyphicon glyphicon-eye-open " %></td>

              <% if rent_post.user == current_user %>
                <td><%= link_to '', edit_rent_post_path(rent_post), :class => "glyphicon glyphicon-pencil " %></td>
                <td><%= link_to '', rent_post, method: :delete, data: { confirm: 'Are you sure?' }, :class => "glyphicon glyphicon-trash " %></td>
              <% else %>
                <td></td>
                <td></td>
              <% end %>
              </tr>
              <% end %>
            </tbody>
      </table>
      
    </div>
  </div>
</div>

<div align="center">
  <%= paginate @rent_posts %>
</div>
<br>



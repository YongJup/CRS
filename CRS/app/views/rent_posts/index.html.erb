<script src="https://code.jquery.com/jquery-1.11.1.min.js"></script>
<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>

<p id="notice"><%= notice %></p>

<h1>Rent Posts</h1>

<div class="container", align="right">
  <%= link_to 'New Rent Post', new_rent_post_path, :class => "btn btn-default" %>
	<div class="row">
		<div class="table-responsive">
      <table id="main-table" class="table exotic-table">
        <thead>
          <tr class = "text-center">
            <th>User</th>
            <th>Lens name</th>
            <th>Lens img</th>
            <th>Mount</th>
            <th>Zoom lens</th>
            <th>Distance</th>
            <th>Aperture</th>
            <th>Is</th>
            <th>Location</th>
            <th>Price</th>
            <th>Rented</th>
            <th>Content</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody class="text-center">
          <% @rent_posts.each do |rent_post| %>
            <tr>
              <td><%= link_to rent_post.user.email, rent_post.user %></td>
              <td><%= rent_post.lens_name %></td>
              
              <td><img src="<%=rent_post.image %>", width = 300, height = 200></td>
              <!--<td><%= image_tag("#{rent_post.image}") %></td>-->
      
              <td><%= rent_post.mount %></td>
              <td><%= rent_post.zoom_lens %></td>
              <td><%= rent_post.distance %></td>
              <td><%= rent_post.aperture %></td>
              <td><%= rent_post.is %></td>
              <td><%= rent_post.location %></td>
              <td><%= rent_post.price %></td>
              <td><%= rent_post.rented %></td>
              <td><%= rent_post.content %></td>
              <td><%= link_to '', rent_post, :class => "glyphicon glyphicon-eye-open"  %></td>
              
              <% if rent_post.user == current_user %>
                <td><%= link_to '', edit_rent_post_path(rent_post), :class => "glyphicon glyphicon-pencil" %></td>
                <td><%= link_to '', rent_post, method: :delete, data: { confirm: 'Are you sure?' }, :class => "glyphicon glyphicon-trash" %></td>
              <% else %>
                <td></td>
                <td></td>
              <% end %>
              </tr>
              <% end %>
            </tbody>
      </table>
      
    </div>
  </div>
</div>
<div align="center">
  <%= paginate @rent_posts %>
</div>
<br>


